<% include ../partials/head %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="/images/dashboard/onstak-logo.png" alt="logo">
              </div>
              <h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" method="POST" action="">
                <% if(login_message != ''){%>
                      <%if(notF == 'success'){%>
                        <div class="form-group">
                            <div class="alert alert-fill-success"><%=login_message%></div>
                          </div>
                      <%}else{%>
                      <div class="form-group">
                          <div class="alert alert-fill-danger"><%=login_message%></div>
                        </div>
                      <%}%>
                <%}%>
                <% if(typeof user_email != 'undefined'){%>
                <div class="form-group">
                  <div class="alert alert-fill-danger">Invalid email or password!</div>
                </div>
                <%}%>
                <div class="form-group">
                  <input required type="email" value="<% if(typeof user_email != 'undefined'){%> <%=user_email%> <%}%>" name="login_email" class="form-control form-control-lg" placeholder="Email">              
                </div>
                <div class="form-group">
                  <input required type="password" name="login_password" class="form-control form-control-lg" placeholder="Password">
                </div>
                
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <!--<div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      Keep me signed in
                    </label>
                  </div>-->
                  <a href="/recover" class="auth-link text-black">Forgot password?</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="/js/vendor.bundle.base.js"></script>
  <script src="/js/vendor.bundle.addons.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="/js/off-canvas.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/template.js"></script>
  <script src="/js/settings.js"></script>
  <!-- <script src="/js/todolist.js"></script> -->
  <!-- endinject -->
</body>

</html>
