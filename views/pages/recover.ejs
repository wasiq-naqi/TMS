<% include ../partials/head %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <% if(pageType == 'recover'){ %>
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="/images/dashboard/onstak-logo.png" alt="logo">
              </div>
              <h4>Forget Password!</h4>
              <h6 class="font-weight-light">Enter you email to continue.</h6>
              <form class="pt-3" id="Form-PasswordReset">
                
                <div class="form-group">
                  <input required type="email" name="user_email" class="form-control form-control-lg" placeholder="Email">              
                </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <a href="/login" class="auth-link text-black">Login?</a>
                </div>
              </form>
            </div>
            <%}else{%>

              <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                  <img src="/images/dashboard/onstak-logo.png" alt="logo">
                </div>
                <h4>Change Password!</h4>
                <h6 class="font-weight-light">Please enter your new strong password.</h6>
                <form class="pt-3" method="POST" action="/recover/verify" id="Form-PasswordChange">
                  <div class="form-group">
                      <input readonly type="text" name="link" value="<%=link%>" class="form-control hidden">
                      <input readonly type="text" name="token" value="<%=token%>" class="form-control hidden">                
                  </div>
                  <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="change_pass_1" class="form-control form-control-lg">              
                  </div>
                  <div class="form-group">
                      <label>Retype password:</label>
                      <input type="password" name="change_pass_2" class="form-control form-control-lg">              
                    </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                  </div>
                  <div class="my-2 d-flex justify-content-between align-items-center">
                  </div>
                </form>
              </div>

            <%}%>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="/js/vendor.bundle.base.js"></script>
  <script src="/js/vendor.bundle.addons.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="/js/off-canvas.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/template.js"></script>
  <script src="/js/settings.js"></script>
  <script src="/js/custom.js"></script>
  <!-- <script src="/js/todolist.js"></script> -->
  <!-- endinject -->
</body>

</html>
